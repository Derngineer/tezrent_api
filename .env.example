# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False

# Database Configuration
# Option 1: DATABASE_URL (connection string format)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Individual PostgreSQL variables (for Azure AD auth)
PGHOST=your-postgres-host.database.azure.com
PGUSER=your-database-user@yourdomain.com
PGPORT=5432
PGDATABASE=postgres
# PGPASSWORD will be set dynamically via Azure AD token or use a password

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Email Configuration (if using)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
